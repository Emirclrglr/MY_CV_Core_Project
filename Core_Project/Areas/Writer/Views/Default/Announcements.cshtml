@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Duyurular</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>BAŞLIK</th>
                          <th>İÇERİK</th>
                          <th>TARİH</th>
                          <th>Tür</th>
                          <th>DETAYLAR</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model){
                        <tr>
                          <th>@item.Id</th>
                          <td>@item.Title</td>
                          <td>@item.Content</td>
                          <td>@(((DateTime)item.Date).ToString("dd MMMMMMMM yyyy"))</td>
                          
                                @if (item.Status == "Erteleme")
                                {
                                    <td><label class="badge badge-danger">@item.Status</label></td>
                                }
                                @if (item.Status == "Yeni Video")
                                {
                                    <td><label class="badge badge-success">@item.Status</label></td>
                                }
                                @if (item.Status == "Konferans")
                                {
                                    <td><label class="badge badge-warning">@item.Status</label></td>
                                }
                                @if (item.Status == "Yeni Yazı")
                                {
                                    <td><label class="badge badge-primary">@item.Status</label></td>
                                }
                             <td><a href="/Writer/Default/AnnouncementDetails/@item.Id" class="btn btn-primary">Detaylar</a></td>
                            </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
