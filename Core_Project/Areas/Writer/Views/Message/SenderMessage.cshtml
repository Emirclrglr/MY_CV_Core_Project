@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Gönderilen Mesajlar</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>KONU</th>
                          <th>GÖNDERİLEN</th>
                          <th>MESAJ</th>
                          <th>TARİH</th>
                          <th>DETAYLAR</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model){
                        <tr>
                          <th>@item.Subject</th>
                          <td>@item.Receiver - @item.ReceiverName</td>
                          <td>@item.MessageContent</td>
                          <td>@(((DateTime)item.Date).ToString("dd MMMMMMMM yyyy"))</td>
                          <td><a href="/Writer/Message/SentMessageDetails/@item.Id" class="btn btn-primary">Mesajı Gör</a></td>
                         </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>


