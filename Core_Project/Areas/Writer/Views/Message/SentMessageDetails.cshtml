@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SentMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Mesaj Detayları</h2>
<br />
<form class="form-group">
    @Html.HiddenFor(x=>x.Id)

    @Html.Label("Gönderilen")
    @Html.TextBoxFor(x=>x.ReceiverName, new{@class = "form-control"})
    <br />
    @Html.Label("Gönderilen Mail")
    @Html.TextBoxFor(x=>x.Receiver, new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,10,50, new {@class = "form-control"})
</form>

