@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceivedMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form class="form-group">
    @Html.HiddenFor(x=>x.Id)

    @Html.Label("Gönderen")
    @Html.TextBoxFor(x=>x.SenderName, new{@class = "form-control"})
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x=>x.Sender, new{@class = "form-control"})
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject, new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,10,50, new {@class = "form-control"})
</form>


