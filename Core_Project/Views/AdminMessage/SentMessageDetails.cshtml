@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SentMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form class="form-group">
    @Html.HiddenFor(x=>x.Id)

    @Html.Label("Alıcı")
    @Html.TextBoxFor(x=>x.ReceiverName, new{@class = "form-control"})
    <br />
    @Html.Label("Alıcı Mail")
    @Html.TextBoxFor(x=>x.Receiver, new{@class = "form-control"})
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject, new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,10,50, new {@class = "form-control"})
</form>




