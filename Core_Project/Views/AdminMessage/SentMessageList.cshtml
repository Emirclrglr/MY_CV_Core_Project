@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SentMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Gönderilen Mesajlar</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Alıcı Adı</th>
                            <th>Mail Adresi</th>
                            <th>Konu</th>
                            <th>Mesaj İçeriği</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model){
                          <tr>
                            <td>@item.ReceiverName</td>
                            <td>@item.Receiver</td>
                            <td>@item.Subject</td>
                            <td>@item.MessageContent</td>
                            <td>@(((DateTime)item.Date).ToString("dd MMMMMMMM yyyy"))</td>
                             <td><a href="/AdminMessage/SentMessageDelete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                             <td><a href="/AdminMessage/SentMessageDetails/@item.Id" class="btn btn-outline-info">Detaylar</a></td>
                            </tr>
                          }
                        </tbody>
                      </table>
                      <br />
                      <a href="/AdminMessage/SendMessage" class="btn btn-outline-light">Mesaj Gönder</a>
                      <a href="/AdminMessage/RecievedMessageList" class="btn btn-outline-behance">Gelen Mesajlar</a>
                    </div>
                  </div>
                </div>
              </div>


