@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("Index","Feature",FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <form class="forms-sample">
                      <div class="form-group">
                        @Html.HiddenFor(x=>x.FeatureID)
                      </div>
                      <div class="form-group">
                        <label>Başlık 1</label>
                        @Html.TextBoxFor(x=>x.Header,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Başlık 2</label>
                        @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Unvan</label>
                        @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
                      </div>
                      <br>
                      <button type="submit" class="btn btn-primary mr-2">Düzenle</button>
                    </form>
                  </div>
                </div>
              </div>
}
