@using EntityLayer.Concrete
@model List<Portfolio>
            <div class="row ">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Projelerim</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th> Proje Adı </th>
                            <th> URL </th>
                            <th> Proje Ücreti </th>
                            <th> Tarih </th>
                            <th> Ödeme Şekli </th>
                            <th> Tamamlanma Oranı </th>
                            <th> Durumu </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model){
                          <tr>
                            <td>@item.PortfolioID</td>
                            <td>
                              <img src="@item.Platform" alt="image" />
                              <span class="pl-2">@item.Name</span>
                            </td>
                            <td> @item.ProjectURL </td>
                            <td> @item.Price </td>
                            <td> 8 Şubat 2024 </td>
                            <td> Credit card </td>
                            <td> @item.Value% </td>
                            <td>
                                        @if (item.Value == 100)
                                        {
                                            <div class="badge badge-outline-success"> Tamamlandı </div>
                                        }
                                        @if (item.Value < 100)
                                        {
                                            <div class="badge badge-outline-danger">Devam Ediyor</div>
                                        }
                                        
                            </td>
                          </tr>
                          }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
