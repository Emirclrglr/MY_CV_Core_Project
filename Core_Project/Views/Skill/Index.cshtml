@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Yetenek Tablosu</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Oran</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model){
                          <tr>
                            <th>@item.SkillID</th>
                            <td>@item.Title</td>
                            <td>@item.Value%</td>
                            <td><a href="/Skill/RemoveSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Düzenle</a></td>
                          </tr>
                          }
                        </tbody>
                      </table>
                      <br />
                      <a href="/Skill/AddSkill" class="btn btn-outline-info">Yeni Yetenek Ekle</a>
                    </div>
                  </div>
                </div>
              </div>
