@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("UpdateTestimonial","Testimonial",FormMethod.Post))
{
        <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <form class="forms-sample">
                      <div class="form-group">
                        @Html.HiddenFor(x=>x.TestimonialID)
                      </div>
                      <div class="form-group">
                        <label>Ad ve Soyad</label>
                        @Html.TextBoxFor(x=>x.ClientName,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x=>x.ClientCompany,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Unvan</label>
                        @Html.TextBoxFor(x=>x.ClientTitle,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Görsel Yolu</label>
                        @Html.TextBoxFor(x=>x.ImageURL,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x=>x.ClientComment,6,3,new{@class="form-control"})
                      </div>
                      <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                    </form>
                  </div>
                </div>
              </div>
}
